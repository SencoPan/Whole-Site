                input(type="text" name="login")

                label Password
                input(type="password" name="password")

                input(type='submit' value='Log in' class="active")
            .option-span
                span or
            .other-option
                .block-for-options
                    p register with &nbsp;
                        span g+
                .block-for-options
                    p register with &nbsp;
                        span GitHub
                .block-for-options
                    p register with &nbsp;
                        span habr
            .addBlock
