extends authLayout

block form
      form(method="post" class="registration disabled probPass" action='/auth/reg')
          h1 Registration
          label First Name
          input(type="text" name="FirstName")
          label Second Name
          input(type="text" name="SecondName")
          label Login
          input(type="text" name="login")
          label Email
          input(type="text" name="email")
          label Password
          input(type="password" name="password")
          label Password Check
          input(type="password" name="passwordCheck")
          .radioUrAgmnt
              input(type="checkbox" name="userAgreement")
              | I accept
              a(href="/info" style="margin-left:5px;")  User agreement
          .g-recaptcha.captchaSt(data-sitekey='6LeKZrIUAAAAALM7WENeNTi8b7rsZ_DCTQJArb8h')
          input(type='submit' value='Sign Up' class="disabled")
      .addBlock
        a(href="/") Main Page
        a(href='/auth/login') Login

block script
    script(src='../javascripts/regScript.js')
