extends mainLayout
block title
    title News
block loginPanel
    if( !session )
        .logsButtons
            a(href="/auth/login")
                button.btnNav Log in
            a(href='/auth/reg')
                button.btnNav Sign up
    else
        .logsButtons
            a(href="profile")
                button.btnNav Profile
            a(href="auth/logout")
                button.btnNav Log out


block content
    .col.col-9
        .text
            p All threads
        hr
        .dropdown
            button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                | Горя́чее
            .dropdown-menu(aria-labelledby='dropdownMenuButton')
                a.dropdown-item(href='#') Киберпанк
                a.dropdown-item(href='#') Программирование
                a.dropdown-item(href='#') Игровой паб
        .row.to-hide-content
            .col-5.to-hide-content
                ul.content-buttons
                    li.content-button
                        a.right-now-in(href='#') Сегодня
                    li.content-button
                        a.not-in(href='#') Вчера
                    li.content-button
                        a.not-in(href='#') Неделя
                    li.content-button
                        a.not-in(href='#') Месяц
        if posts !== undefined
            each val in posts
                .col-12.content-blog-start
                    .col-12.UserProfile
                        img.UserIcon(src='images/testIco.png' alt='icon')
                        p.nameOfUser #{val.user}
                        span #{val.createAt.toLocaleDateString("en-US")}
                        // After date
                        - let name = val.title
                    h4.nameOfPost #{name}
                    .tagsOfPost
                        each tag in val.tags.split(" ")
                            a(href='#') #{tag}
                    .col-12
                        img.ImgOfPost(src=`${val.photos}` alt='postImg')
                    .col-12.InfoNInteractive
                        .col-12.description
                            p.desSec #{val.description}
                        .col.yeah
                            .commentsNpull
                                a.comments(href='#')
                                    | 0
                                    i.far.fa-comment-alt
                            .col-2.votePull
